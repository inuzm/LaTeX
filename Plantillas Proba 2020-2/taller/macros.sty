% Definición de comandos para problemas y soluciones
\newcounter{problema}
\newcounter{solucion}

\newcommand\Problema{%
  \stepcounter{problema}%
  \noindent\textbf{\theproblema.}~%
  \setcounter{solucion}{0}%
}

\newcommand\LaSolucion{%
  \vs\noindent\textbf{Respuesta:}\\%
}

\newcommand\UnaSolucion{%
  \stepcounter{solucion}%
  \vs\noindent\textbf{Respuesta \thesolucion:}\\%
}

