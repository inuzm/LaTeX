\newcommand\EE{\mathbb E}
\newcommand\1{\mathbbm 1}
\newcommand\pleq{\mathbin{\cdot\!\leq\!\cdot}}
\newcommand\norma[1]{\left\lVert #1 \right\rVert}
\newcommand\parente[1]{\left( #1 \right)}

